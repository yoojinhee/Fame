<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MissionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="미션을 선택해주세요."
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/BasicButton"
            android:layout_width="240px"
            android:layout_height="0dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="93dp"
            android:background="#017BEC"
            app:layout_constraintBottom_toTopOf="@+id/basicButton"
            app:layout_constraintEnd_toStartOf="@+id/inputButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/inputButton"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginEnd="70dp"
            android:background="#017BEC"
            android:shadowColor="#00992D2D"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/BasicButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="96dp"
            android:text="입력하기"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BasicButton" />

        <TextView
            android:id="@+id/InputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="8dp"
            android:text="기본"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputButton"
            app:layout_constraintVertical_bias="0.011" />

        <TextView
            android:id="@+id/inputText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="8dp"
            android:text="comming soon..."
            android:textColor="#585656"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputButton"
            app:layout_constraintVertical_bias="0.515" />

        <Button
            android:id="@+id/basicButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="206dp"
            android:background="#7FBCF5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/BasicButton"
            app:layout_constraintStart_toStartOf="@+id/BasicButton"
            app:layout_constraintTop_toBottomOf="@+id/BasicButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>