<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#037CEC"
    android:orientation="vertical"
    tools:context="com.example.fame.WordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="초급"
            android:textColor="#FDFAFA"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/listButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="list" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="311dp"
        android:layout_height="293dp"
        android:layout_gravity="center"
        android:gravity="center|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/wordButton"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#FFFCFC"
            android:text="Button"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/exText"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:background="#FFFCFC"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#030303"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/CheckButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    -

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/leftButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="#00FCFAFA"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wleft" />

        <LinearLayout
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:text="1"
                android:textColor="#F8F4F4"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:text="/ "
                android:textColor="#F8F4F4"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/endText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:text="100"
                android:textColor="#F8F4F4"
                android:textSize="25sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:background="#00FDFAFA"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wright" />

    </LinearLayout>

</LinearLayout>